# PostgreSQL Configuration
# Connection string for Docker (uses host.docker.internal to access system database)
CONNECTION_STRING=Host=host.docker.internal;Port=5432;Database=rent-manager;Username=postgres;Password=your-db-password

# Stripe Configuration (Optional - for payment features)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Backend Zitadel OAuth Configuration
ZITADEL_AUTHORITY=your-zitadel-authority-url
ZITADEL_AUDIENCE=your-zitadel-audience-id

# Frontend Configuration
REACT_APP_BASE_URL=http://localhost:3000

# Frontend Zitadel OAuth 2.0 Configuration
REACT_APP_ZITADEL_AUTHORITY=your-zitadel-authority-url
REACT_APP_ZITADEL_CLIENT_ID=your-zitadel-client-id
REACT_APP_REDIRECT_URI=http://localhost:3000/auth/callback
